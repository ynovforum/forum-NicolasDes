doctype html
html(lang='fr')

    head
        meta(charset='UTF-8')
        title Forum
        link(href="https://fonts.googleapis.com/css?family=Source+Sans+Pro" rel="stylesheet")
        link(rel="stylesheet", href="/css/home.css")
    if user
        div(class="navbar")
            li
                a(href="") Home
            li
                a(href="/profile/" + user.id) Profil
            li
                a(href="/question") Question
            li
                a(href="") About
            div(class="right")
                li(href="") Deconnexion


    body
        div(class="toutou")
            if user
                h3 Questions
                div(class="container")
                    div(class="container-gauche")
                        img(src="image/111.png")
                        div(class="sous")
                            div(class="text")
                                p Designin in US
                                p United States, San francisco
                            div(class="boutt")
                                button(action="") Afficher
                    div(class="container-droite")
                        img(src="image/111.png")
                        div(class="sous")
                            div(class="text")
                                p Designin in US
                                p United States, San francisco
                            div(class="boutt")
                                button(action="") Afficher
                div(class="title")
                    a Toutes les questions
                div(class="tableau")
                    ul
                        li titre
                        li auteur
                        li date

                for actualite in actualites
                    actualite
                    div(class="tableau")
                        if actualite.resolvedAt === null
                            ul
                                li #{actualite.title}
                                li #{actualite.user.username}
                                li #{moment(actualite.createdAt).fromNow()}
                                a(href="/affichage/" + actualite.id)
                                    button Afficher
                        else
                            ul
                                li #{actualite.title}
                                li #{actualite.user.username}
                                li #{moment(actualite.createdAt).fromNow()}
                                a(href="/affichage/" + actualite.id)
                                    button RÃ©solu


            else
                div(class="block")
                    div(class="co")
                        a(href="/connexion") Connectez-vous !
                    div(class="ins")
                        a(href="/new") Inscrivez-Vous !

